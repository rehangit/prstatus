{
  "name": "PR Status",
  "description": "Inject PR Review Approval status in Jira card",
  "version": "0.0.1",
  "background": { "scripts": ["background.js"], "persistent": false },
  "permissions": [
    "tabs",
    "declarativeContent",
    "https://*.atlassian.net/*"
  ],
  "page_action": { 
    "non_default_popup": "options/index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.atlassian.net/secure/RapidBoard.jspa?*"],
      "js": ["contentscript.js"]
    }
  ],
  "icons": { "128": "icons/icon-active.png" },
  "options_ui": {
    "chrome_style": true,
    "page": "options/index.html",
    "open_in_tab": false
  },
  "web_accessible_resources": ["icons/*.png"],
  "manifest_version": 2
}
