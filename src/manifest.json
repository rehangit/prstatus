{
  "name": "PR Status",
  "description": "Show Github PR Review Approval status in the cards on a Jira board",
  "version": "0.1.3",
  "background": { "scripts": ["background.js"], "persistent": false },
  "permissions": ["tabs", "declarativeContent", "https://*.atlassian.net/*"],
  "content_scripts": [
    {
      "matches": ["https://*.atlassian.net/secure/RapidBoard.jspa?*"],
      "js": ["contentscript.js"]
    }
  ],
  "icons": { "640": "icons/logo-640.png", "128": "icons/icon-active.png" },
  "options_ui": {
    "chrome_style": true,
    "page": "options/index.html",
    "open_in_tab": true
  },
  "web_accessible_resources": ["icons/*.png"],
  "manifest_version": 2
}
