{
  "name": "prstatus",
  "version": "1.0.0",
  "description": "",
  "main": "src/manifest.json",
  "scripts": {
    "prebuild": "rm -fr dist",
    "build": "cross-env NODE_ENV=production parcel build src/manifest.json",
    "dev": "cross-env NODE_ENV=development parcel src/manifest.json --no-hmr",
    "start:firefox": "web-ext run -s ./dist/",
    "zip:src": "rm -f prstatus_src*.zip && zip prstatus-src-$(node version.js).zip -r src/* assets/* *.js package* *.md",
    "zip:firefox": "web-ext build --overwrite-dest -s ./dist",
    "prezip": "npm run build && rm -f prstatus-*.zip",
    "zip": "cd dist && zip -r ../prstatus-$(node ../version.js).zip *"
  },
  "author": "Rehan Ahmad",
  "license": "ISC",
  "dependencies": {
    "lodash.uniqby": "^4.7.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.122",
    "cross-env": "^7.0.2",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-web-extension": "^1.6.1",
    "web-ext": "^5.2.0"
  },
  "browserslist": [
    "last 2 Chrome versions, last 2 Firefox versions"
  ]
}
